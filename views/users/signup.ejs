<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on Wanderlust</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation mt-2" novalidate>
             <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">This looks good</div>
                <div class="invalid-feedback">Give a username</div>
            </div>

            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="eamil" type="email" class="form-control" required>
            </div>

            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
            </div>

            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>